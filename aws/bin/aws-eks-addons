#!/usr/bin/env bash

# AWS EKS Addons command
# ======================
# Tim Friske <me@tifr.de>
#
# Prints the names of AWS EKS addons sorted by name optionally selecting the
# addons by the given regular expressions (regex). When giving multiple regexes
# at least one of them must match (any; logical OR).
#
# Deps:: aws, bash, env, jq, yq

# Ensure fail-fast script execution.
shopt -os nounset pipefail errexit errtrace

# Input parameters and validation:
AWS_EKS_ADDON_REGEXES=("${@}") # optional

function addon_names {
  aws eks describe-addon-versions --output json | jq '.addons|map(.addonName)|sort'
}

function select_by_regexes {
  local regexes=("${@:?regexes}")
  jq 'map(select(. as $string|$ARGS.positional|any(. as $regex|$string|test($regex;"i"))))' --args -- "${regexes[@]}"
}

if (( "${#AWS_EKS_ADDON_REGEXES[@]}" == 0 )); then
  addon_names
else
  addon_names | select_by_regexes "${AWS_EKS_ADDON_REGEXES[@]}"
fi | if [[ -t 1 ]]; then yq --prettyPrint; else jq; fi
